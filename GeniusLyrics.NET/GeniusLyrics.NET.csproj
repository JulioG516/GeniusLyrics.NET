<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
        <Title>GeniusLyrics.NET</Title>
        <Authors>JulioG516</Authors>
        <Company>$(Authors)</Company>
        <Description>A package that allows developers to interact with the Genius API. You can retrieve song information, lyrics, and album art from the Genius platform. </Description>
        <Copyright>MIT</Copyright>
        <RepositoryUrl>https://github.com/JulioG516/GeniusLyrics.NET</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>genius,music lyrics,lyrics-genius,genius lyrics, genius api, lyrics genius</PackageTags>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <Compile Remove="Models\SearchSong\HitResponse.cs" />
      <Compile Remove="Models\SearchSong\Song.cs" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="HtmlAgilityPack" Version="1.11.61" />
    </ItemGroup>

</Project>
